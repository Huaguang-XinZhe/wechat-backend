# 服务器配置
PORT=3000
NODE_ENV=development

# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 微信支付配置
WECHAT_MCH_ID=your_merchant_id
WECHAT_API_KEY=your_api_key
WECHAT_CERT_PATH=/path/to/apiclient_cert.pem
WECHAT_KEY_PATH=/path/to/apiclient_key.pem

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 数据库配置（本地数据库，暂时禁用）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wechat_miniprogram
DB_USER=root
DB_PASSWORD=your_database_password

# 老系统数据库配置
LEGACY_DB_HOST=localhost
LEGACY_DB_PORT=3306
LEGACY_DB_NAME=mall
LEGACY_DB_USER=root
LEGACY_DB_PASSWORD=your_legacy_database_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 微信支付回调地址
PAYMENT_NOTIFY_URL=https://your-domain.com/api/payment/notify 

# 用户注册配置
REQUIRE_INVITE_CODE=true  # 设置为 true 时，新用户注册必须输入邀请码